# Telegram Bot Configuration
# Set to 'true' to enable Telegram notifications
NOTIFICATION_TELEGRAM_ENABLED=true

# Your Telegram Bot Token (get from @BotFather)
NOTIFICATION_TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram Chat ID (can be user ID or group ID)
NOTIFICATION_TELEGRAM_CHAT_ID=your_chat_id_here

# Notification Settings
# Minimum number of seats required to trigger notification (default: 1)
NOTIFICATION_MIN_SEATS=1

# Only send notifications when trains are available (default: true)
NOTIFICATION_ONLY_AVAILABLE=true
